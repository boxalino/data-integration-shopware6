<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:monolog="http://symfony.com/schema/dic/monolog"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd http://symfony.com/schema/dic/monolog http://symfony.com/schema/dic/monolog/monolog-1.0.xsd">

    <monolog:config>
        <monolog:channel>boxalino-di</monolog:channel>
        <monolog:handler name="boxalino_di_log"
                         type="stream"
                         path="%kernel.logs_dir%/boxalino-di-%kernel.environment%.log"
                         level="debug">
            <monolog:channels>
                <monolog:channel>boxalino-di</monolog:channel>
            </monolog:channels>
        </monolog:handler>
    </monolog:config>

    <services>

        <!-- A: configuration cache handler (loads instant-update configurations in a key) -->
        <service id="boxalino.di.configurator" class="Boxalino\DataIntegration\Service\Util\Configuration">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="cache.object"/>
            <argument type="service" id="Shopware\Core\System\SalesChannel\Context\SalesChannelContextService"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <!-- B: client (logs & accesses the configurations) -->
        <service id="boxalino.di.client.instant" class="Boxalino\DataIntegration\Service\Util\Client\InstantUpdate">
            <argument type="service" id="boxalino.di.configurator"/>
            <argument type="service" id="monolog.logger.boxalino-di"/>
            <argument>%kernel.environment%</argument>
        </service>

        <!-- C: helper to access localized content (translations) -->
        <service id="boxalino.di.util.localized" class="Boxalino\DataIntegration\Service\Util\Document\StringLocalized">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

    </services>

</container>
